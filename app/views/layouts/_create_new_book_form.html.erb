<h2 class="mt-3">New book</h2>
<%= form_with model: book, local:true do |f| %>
  <div class="form-group">
    <label for="book_title">Title</label>
    <%= f.text_field :title, class:"form-control", placeholder:"" %>
  </div>
  <div class="form-group">
    <label for="book_title">Opinion</label>
    <%= f.text_area :body, class:"form-control", placeholder:"" %>
  </div>
  <hr>
  <%= f.submit 'Create Book', class:"btn btn-lg btn-block btn-info mt-4 btn-success" %>
<% end %>