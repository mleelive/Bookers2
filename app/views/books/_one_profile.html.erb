<h2>Book detail</h2>
<table class="table table-hover table-inverse">
  <tbody>
    <tr>
      <td>
        <%= link_to attachment_image_tag(book.user, :profile_image, format: 'jpeg' , fallback: "no_image.jpg",:size => '40x40'),book.user %>
        <br>
        <%= link_to book.user.name, book.user %>
      </td>
      <td>
        <%= link_to(book_path(book.id), class:"text-dark") do %>
        <%= book.title %>
        <% end %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td>
        <% if book.user == current_user %>
          <%= link_to "Edit", edit_book_path(book) , class:"btn btn-sm btn-success"%>
        <% end %>
      </td>
      <td>
        <% if book.user == current_user %>
          <%= link_to "Destroy", book_path(book), class:"btn btn-sm btn-danger", data: { confirm: '本当に消しますか？' }, method: :delete %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>