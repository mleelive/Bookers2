<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
       <div class="form-body p-4">
        <%= render 'layouts/resistration_error', resitration: @book %>
      </div>
      <%= form_with model:@book, local:true do |f| %>
        <div class="form-group">
          <label for="inputName">Title</label>
        </div>
        <div class="form-group">
          <%= f.text_field :title, autofocus: true, id:"inputName", placeholder:""%>
        </div>
        <div>
          <label for="inputImage">Introduction</label>
        </div>
        <div class="form-group">
          <%= f.text_area :body, autofocus: true, id:"inputName", placeholder:""%>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book",:class=>"btn btn-secondary btn-success" %>
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book) %> |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>