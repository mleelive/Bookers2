<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <div class="form-body p-4">
        <%= render 'layouts/resistration_error', resitration: @user %>
      </div>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
        </div>
        <div class="form-group">
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
        </div>
        <div class="form-group">
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
          <label for="inputImage">Image</label>
          </div>
        <div class="form-group">
          <%= f.attachment_field :profile_image, placeholder: "Image" %>
        </div>
        <label for="inputImage">Introduction</label>
        <div class="form-group">
          <%= f.text_area :introduction, autofocus: true, id:"inputName", placeholder:""%>
        </div>
        <div class="form-group">
          <%= f.submit "Update User",:class=>"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>