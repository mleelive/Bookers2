<h2>Users</h2>
<table class="table">
  <tbody>
    <tr>
      <th>image</th>
      <th>name</th>
       <th></th>
    </tr>
    <% users.each do |user| %>
    <tr>
      <td>
        <%= link_to attachment_image_tag user, :profile_image, format: 'jpeg' , fallback: "no_image.jpg",:size => '60x60' %>
      </td>
      <td>
        <%= user.name %>
      </td>
      <td>
        <%= link_to 'Show', user_path(user.id) %>
      </td>
      <% end %>
    </tr>
  </tbody>
</table>